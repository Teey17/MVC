@model Events.Webv2.Models.CommentInputModel
@{
    ViewBag.Title = "Comment";
}

@using (Html.BeginForm("AddCommentById", "Home", FormMethod.Post, new { id = ViewBag.Id }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-3">
        <h6>Add Comment</h6>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-6">
                @Html.HiddenFor(model => model.EventId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" class="btn btn-success" value="Add commment" />
                @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}

